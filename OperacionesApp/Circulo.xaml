<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Circulo"
             Title="Área del círculo">
    <StackLayout Padding="10">
        <Entry x:Name="radioCirculo" Placeholder="Ingrese el radio del círculo" Keyboard="Numeric"/>
        <Button Text="Calcular" Clicked="calcularAreaCirculo"/>
        <Label x:Name="resultadoCirculoLabel"/>
        <Button Text="Limpiar" Clicked="limpiarCirculo"/>
    </StackLayout>
</ContentPage>