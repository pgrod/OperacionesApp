<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Rectangulo"
             Title="Área del rectángulo">
    <StackLayout Padding="10">
        <Entry x:Name="anchoRectangulo" Placeholder="Ingrese el ancho del rectángulo" Keyboard="Numeric"/>
        <Entry x:Name="alturaRectangulo" Placeholder="Ingrese la altura del rectángulo" Keyboard="Numeric"/>
        <Button Text="Calcular" Clicked="calcularAreaRectangulo"/>
        <Label x:Name="resultadoRectanguloLabel"/>
        <Button Text="Limpiar" Clicked="limpiarRectangulo"/>
    </StackLayout>
</ContentPage>